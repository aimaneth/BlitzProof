# Database Configuration
DATABASE_URL=postgresql://username:password@your-db-host:5432/blitzproof_prod
REDIS_URL=redis://your-redis-host:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=4000
NODE_ENV=production
FRONTEND_URL=https://your-domain.com

# CORS Configuration
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Blockchain Explorer API Keys
# Get these from: https://etherscan.io/apis, https://polygonscan.com/apis, etc.
ETHERSCAN_API_KEY=your-etherscan-api-key-here
POLYGONSCAN_API_KEY=your-polygonscan-api-key-here
BSCSCAN_API_KEY=your-bscscan-api-key-here
ARBISCAN_API_KEY=your-arbiscan-api-key-here
OPTIMISM_API_KEY=your-optimistic-etherscan-api-key-here

# Additional Explorer APIs (optional)
SNOWTRACE_API_KEY=your-snowtrace-api-key-here
FTMSCAN_API_KEY=your-ftmscan-api-key-here
BASESCAN_API_KEY=your-basescan-api-key-here
LINEASCAN_API_KEY=your-lineascan-api-key-here
ZKSCAN_API_KEY=your-zkscan-api-key-here
SCROLLSCAN_API_KEY=your-scrollscan-api-key-here
MANTLESCAN_API_KEY=your-mantlescan-api-key-here
CELOSCAN_API_KEY=your-celoscan-api-key-here
GNOSISSCAN_API_KEY=your-gnosisscan-api-key-here
MOONSCAN_API_KEY=your-moonscan-api-key-here
HARMONY_API_KEY=your-harmony-api-key-here
CRONOSCAN_API_KEY=your-cronoscan-api-key-here
KLAYTNSCOPE_API_KEY=your-klaytnscope-api-key-here
METIS_API_KEY=your-metis-api-key-here
BOBASCAN_API_KEY=your-bobascan-api-key-here

# Security Tool Configuration
SLITHER_TIMEOUT=300
MYTHRIL_TIMEOUT=300
OYENTE_TIMEOUT=300
SECURIFY_TIMEOUT=300

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@your-domain.com

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE=./logs/app.log

# Production Configuration
PRODUCTION_DOMAIN=your-domain.com
SSL_CERT_PATH=/path/to/ssl/certificate
SSL_KEY_PATH=/path/to/ssl/private/key

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-here
GOOGLE_ANALYTICS_ID=your-ga-id-here

# Third-party Integrations
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Backup and Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=blitzproof-backups

# Development Tools (disabled in production)
DEBUG=false
ENABLE_SWAGGER=false
ENABLE_GRAPHQL_PLAYGROUND=false 